        var userName=""
        $('.submitName').removeAttr('disabled')
        $('#chatInput input').focus(function(){
          console.log()
          $('.icon-comments-alt').css('color','#C40A68')
        })
        $('#chatInput input').focusout(function(){
          $('.icon-comments-alt').css('color','#8D8F8F')
        })
</script>


